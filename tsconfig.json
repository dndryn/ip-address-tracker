{
    "compilerOptions": {
        /* Language and Environment -*/
        "target": "ES5",
        "jsx": "react",

        /* Modules */
        "module": "ES6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@app": [ "./src/app/_index.tsx" ],
            "@css-reset": [ "./src/app/assets/css/reset.css" ],
            "@font/Rubik": [ "./src/app/assets/css/fonts.css"],
            "@data/*": [ "./src/app/data/*.json" ],
            "@asset/*": [ "./src/app/assets/images/*" ],
            "@page/*": [ "./src/app/pages/*/_index.tsx" ],
            "@component/*": 
            [ 
                "./src/app/components/ui/*/_index.tsx", 
                "./src/app/components/form/*/_index.tsx" 
            ],
            "@style/*": [ "./src/app/assets/scss/*.scss" ],
        },

        /* JavaScript Support */
        "allowJs": true,

        /* Emit */
        "sourceMap": true,
        "outDir": "./dist/",

        /* Interop Constraints */
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Type Checking */
        "strict": true,
        "noImplicitAny": false,
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ],

        /* Completeness */
        "skipLibCheck": true
    },
    "ts-node": {
        "compilerOptions": { "module": "CommonJS" }
    },
    "exclude": [
        "docs"
    ]
}


